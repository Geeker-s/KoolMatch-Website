{% extends 'base.html.twig' %}
{% block title %}Hello TestController!{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1000px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
<main>
    
<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between mb-3"> <span>.</span></div>
    <div class="row g-2">
    {% for e in Reservation %}
      
            
       <div class="card">
                    <div class="card-body">
                      <h5 class="card-title">{{e.idRestaurant.nomRestaurant}}</h5>
                      <p class="card-text">{{e.nbplaceReservation}}</p>
                           <img style="width:100px ; height:100px" class="card-text" src="{{asset(e.idRestaurant.image)}}"/>
                      <p class="card-text">{{e.dateReservation.format('d/m/Y')}}</p>
                    
                    
                   <button> <a href="{{ path('delete1',{'idReservation':e.idReservation})}}">Delete </a>
                   <button> <a href="{{ path('update1',{'idReservation':e.idReservation})}}">Modifier </a></div>
             </div>
        {% endfor %}
        
</div>
</main>
</div>
{% endblock %}