{% extends 'base.html.twig' %}

{% block title %}Leftover{% endblock %}

{% block body %}

<div class="container">
    <div class="col-md-12 col-lg-12">
        <article class="post vt-post">
            <div class="row">
                <div class="col-xs-12 col-sm-5 col-md-5 col-lg-4">
                    <div class="post-type post-img">
                        <a href="#"><img src="{{asset(detailE.image)}}" class="img-responsive" alt="image post"></a>
                    </div>
                    <div class="author-info author-info-2">
                        <ul class="list-inline">
                            <li>
                                <div class="info">
                                    <p>Nom restaurant:
                                    <strong>{{detailE.nomRestaurant}}</strong></p></div>
                            </li>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-7 col-md-7 col-lg-8">
                    <div class="caption">
                        <h3 class="md-heading"><a href="{{ path('reservation_app') }}">Reservation</a></h3>
                        <p>{{detailE.nomRestaurant}}</p>
                        <p>{{detailE.adresseRestaurant}} </p>
                    
                </div>

            </div>
        </article>
        
        
       
       
    
    </div>
</div>

{% endblock %}