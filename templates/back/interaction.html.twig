                    <div class="card-body">
                        <h5 class="card-title">Liste des Interactions</h5>
                        <table class="table table-borderless datatable">
                            <thead style="background-color: #f6f6fe">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Utilisateur X</th>
                                <th scope="col">Utilisateur Y</th>
                                <th scope="col">Date d'interaction</th>
                                <th scope="col" width="10%"></th>
                                <th scope="col" width="10%"><a href="#" class="align-center"><img
                                                src="{{ asset('back/assets/img/Interaction/settings.png') }}"
                                                width="20%"
                                                alt="Auto Matching"></a></th>
                                <th scope="col">Status</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for i in interactions %}
                                <tr>
                                    <th scope="row">#{{ i.idInteraction }}</th>
                                    <td>{{ i.idUser1.nomUser }}</td>
                                    <td>{{ i.idUser2.nomUser }}</td>
                                    <td>{{ i.dateInteraction | date("m/d/Y") }}</td>
                                    <td>
                                        <a href="{{ path('updateInteraction',{'id':i.idInteraction}) }}">
                                            <img src="{{ asset('back/assets/img/Interaction/edit.png') }}" width="20%"
                                                 alt="Modifier"></a>
                                    </td>
                                    <td>
                                        <a href="{{ path('deleteInteraction',{'id':i.idInteraction}) }}">
                                            <img src="{{ asset('back/assets/img/Interaction/delete.png') }}" width="20%"
                                                 alt="Supprimer">
                                        </a>
                                    </td>
                                    <td>
                                        {% if i.typeInteraction == 'o' %}
                                            <span class="badge bg-success-light">Love üòç</span>
                                        {% else %}
                                            <span class="badge bg-danger-light">Reject ü´§</span>
                                        {% endif %}

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
