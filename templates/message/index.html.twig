{% extends 'base.html.twig' %}
{% block body %}
    <div class="example-wrapper">
        <div class="mb-3">
           <h2> You are chatting with {{ con.titreConversation }} , <a href="{{ path('affichageconv') }}" >return</a>
           </h2>
        </div>

        <div class="container" style="height: 600px">
            <div class="container bg-light h-75 overflow-auto">
                {% for message in messages %}
{#                    {% if con.idUser1 == current.user %}#}
{#                    na3mel condition si hatha el cha5ess howa el user ely 7achetna bih nwaly yat3ada sinon#}
{#    bech ykun el user 2#}

                    {% if message.idConversation == con.idConversation %}
