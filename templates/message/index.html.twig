                            <b>Me</b>
                            <p class="alert alert-info w-100">
                                {{ message.msgMessage }}
                            </p>
                        </div>
                    {% endif %}
{#                    {% else if con.iduser2 == curent.user %}#}
                        <div class="row w-75 float-left">
                            <b>{{ con.titreConversation }}</b>
