{% extends 'base.html.twig' %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <div style="display : flex ; align-items: center ; justify-content: center ">
            <div class="card">
                <div class="card-body">
                    {{ form_start(g,{attr:{novalidate:'novalidate'}}) }}


                    <div class="row mb-3">
                        <label for="inputEmail" class="col-sm-6 col-form-label">Email Gerant</label>
                        <div class="col-sm-10">
                            {{ form_widget(g.emailGerant,{'attr':{'class':'form-control'}}) }}
                        </div>
                        {{ form_errors(g.emailGerant,{'attr':{'class':'text-danger'}}) }}
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword" class="col-sm-6 col-form-label">Mot de passe</label>
                        <div class="col-sm-10">
                            {{ form_widget(g.passwordGerant,{'attr':{'class':'form-control'}}) }}
                        </div>
                        {{ form_errors(g.passwordGerant,{'attr':{'class':'text-danger'}}) }}
                    </div>
                    {{ form_widget(g.captchaCode) }}
                    <div class="row mb-3" align="right">

                        <div class="col-sm-10">
                            {{ form_widget(g.connexion,{'attr':{'class':'btn btn-primary'}}) }}
                        </div>
                    </div>


                    {{ form_end (g) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}