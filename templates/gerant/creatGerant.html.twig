{% extends 'base.html.twig' %}

{% block body %}
    {% use "bootstrap_4_layout.html.twig" %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 500px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <div style="display : flex ; align-items: center ; justify-content: center ">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ajouter Gérant</h5>
                    {{ form_start(ger,{attr:{novalidate:'novalidate'}}) }}


                    <div class="row mb-3">
                        <label for="inputEmail" class="col-sm-4 col-form-label">Nom</label>
                        <div class="col-sm-10">
                            {{ form_widget(ger.nomGerant,{'attr':{'class':'form-control'}}) }}
                        </div>
                        {{ form_errors(ger.nomGerant,{'attr':{'class':'text-danger'}}) }}
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword" class="col-sm-6 col-form-label">Prénom</label>
                        <div class="col-sm-10">
                            {{ form_widget(ger.prenomGerant,{'attr':{'class':'form-control'}}) }}
                        </div>
                        {{ form_errors(ger.prenomGerant,{'attr':{'class':'text-danger'}}) }}
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword" class="col-sm-6 col-form-label">Email</label>
                        <div class="col-sm-10">
                            {{ form_widget(ger.emailGerant,{'attr':{'class':'form-control'}}) }}
                        </div>
                        {{ form_errors(ger.emailGerant,{'attr':{'class':'text-danger'}}) }}
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword" class="col-sm-6 col-form-label">Mot de passe</label>
                        <div class="col-sm-10">
                            {{ form_widget(ger.passwordGerant,{'attr':{'class':'form-control'}}) }}
                        </div>
                        {{ form_errors(ger.passwordGerant,{'attr':{'class':'text-danger'}}) }}
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword" class="col-sm-6 col-form-label">Téléphone</label>
                        <div class="col-sm-10">
                            {{ form_widget(ger.telephoneGerant,{'attr':{'class':'form-control'}}) }}
                        </div>
                        {{ form_errors(ger.telephoneGerant,{'attr':{'class':'text-danger'}}) }}
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword" class="col-sm-9 col-form-label">Date début abonnement</label>
                        <div class="col-sm-10">
                            {{ form_widget(ger.ddAbonnement,{'attr':{'class':'form-control'}}) }}
                        </div>
                        {{ form_errors(ger.ddAbonnement,{'attr':{'class':'text-danger'}}) }}
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword" class="col-sm-6 col-form-label">Date fin abonnement</label>
                        <div class="col-sm-10">
                            {{ form_widget(ger.dfAbonnement,{'attr':{'class':'form-control'}}) }}
                        </div>
                        {{ form_errors(ger.dfAbonnement,{'attr':{'class':'text-danger'}}) }}
                    </div>
                    <div class="row mb-3" align="right">

                        <div class="col-sm-10">
                            {{ form_widget(ger.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                        </div>
                    </div>


                    {{ form_end (ger) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}