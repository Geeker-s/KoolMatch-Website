{% extends 'back/index.html.twig' %}



{% block body %}
    <div class="col-lg-6" style="margin-top: 100px;align-items: center;justify-content: center;margin-left: auto;margin-right: auto">

        <div class="card" >
            <div class="card-body" >
                <h5 class="card-title">Ajouter  invitation</h5>

                <!-- General Form Elements -->
                {{ form_start(fi,{attr:{novalidate : 'novalidate'}}) }}
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Nom evenement </label>
                    <div class="col-sm-10">
                        {{ form_widget(fi.nomEvent,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(fi.nomEvent,{'attr':{'class':'text-danger'}}) }}
                    </div>
                </div>










                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-2 col-form-label">User Id</label>
                    <div class="col-sm-10">
                        {{ form_widget(fi.idUser,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(fi.idUser,{'attr':{'class':'text-danger'}}) }}
                    </div>
                </div>

                <div class="row mb-3" style="align-items: center">

                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(fi.submit ,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>
                </div>

                <!-- End General Form Elements -->
                {{ form_end(fi) }}

            </div>
        </div>
    </div>



{% endblock %}