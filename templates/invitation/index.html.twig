{% extends 'back/index.html.twig' %}



{% block body %}


    <div class= "row" style="display: flex;align-items: center;justify-content: center;margin-top: 120px">


        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Invitations</h5>
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Id_invitation </th>
                            <th>Evenement </th>
                            <th>Id_user</th>

                            <th>Modification</th>
                            <th>Suppression</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for invitation in i  %}
                            <tr>
                                <td>{{ invitation.idInvitation }}</td>
                                <td>{{ invitation.nomEvent }}</td>

                                <td>{{ invitation.idUser }}</td>


                                <td>
                                    <a class="btn btn-success" href="{{ path('modif_inv',{'idInvitation':invitation.idInvitation}) }}">Modifier</a>
                                </td>
                                <td>
                                    <a class=" btn btn-danger" href="{{ path('supp_inv',{'idInvitation':invitation.idInvitation}) }}">Supprimer</a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>





    </div>
{% endblock %}
